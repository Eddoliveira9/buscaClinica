<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Login">
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_email_login"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center|center_horizontal"
            tools:layout_editor_absoluteY="267dp"
            android:textAlignment="center"
            android:hint="Email"/>
    <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txt_senha_login" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_email_login" android:hint="Senha"
            app:layout_constraintHorizontal_bias="0.505"/>
    <Button
            android:text="Entrar"
            android:layout_width="283dp"
            android:layout_height="57dp"
            android:id="@+id/btn_login" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_senha_login" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="153dp"
            android:id="@+id/btn_cadastrar"
            app:layout_constraintTop_toBottomOf="@+id/btn_login"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.435"
            android:layout_marginTop="4dp"
            android:textColor="#3F51B5"
            android:background="#FFFFFF" />
</LinearLayout>